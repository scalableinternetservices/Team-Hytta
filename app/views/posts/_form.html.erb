<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <br>
    <%= f.text_field :title, placeholder: "Title", style: "width:400px"  %>
  </div>
  <div class="field">
    <br>
    <%= f.text_area :message, placeholder: "Message", style: "width:400px"  %>
  </div>
  <div >
    <%= f.hidden_field :cabin_id, :value => params[:cabin_id] %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Create Post", class: "btn btn-primary btn-sm" %> or
    <%= link_to 'Back', :back, class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
