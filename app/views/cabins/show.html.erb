<p id="notice"><%= notice %></p>

<p>
  <strong>Navn:</strong>
  <%= @cabin.navn %>
</p>

<p>
  <strong>Address:</strong>
  <%= @cabin.address %>
</p>

<p>
  <strong>Descritpion:</strong>
  <%= @cabin.descritpion %>
</p>

<h3>Posts</h3>

<table>

  <tbody>
    <% @cabin.posts.each do |post| %>
        <tr>
      <th>Title</th>
      <th>Message</th>
      <th>Cabin</th>
      <th colspan="3"></th>
    </tr>
      <tr>
        <td><%= post.title %><br/></td>
        <td><%= post.message %></td>
        <td><%= post.cabin.navn %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'New Comment', new_comment_path(:post_id => post.id), class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_post_path(post, :cabin_id => @cabin.id), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
  <tbody>
   <tr>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
    <% post.comments.each do |comment| %>
      <tr>
        <td><%= comment.message %></td>
      </tr>
       <% end %>
      </tbody>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path(:cabin_id => @cabin.id), class: 'btn btn-info' %>

<br>

<%= link_to 'Edit', edit_cabin_path(@cabin) %> |
<%= link_to 'Back', cabins_path %>
