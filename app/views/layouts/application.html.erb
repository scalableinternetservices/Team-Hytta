<!DOCTYPE html>
<html>
<head>
  <title>TeamHytta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
    <div class="navbar-left">

       <%= link_to " ", root_path, type:"button",class: "glyphicon glyphicon-home btn-lg" %>

         </div>

    <div class="navbar-right">

          <% if user_signed_in? %>
            <%= link_to 'Log Out', destroy_user_session_path,
                  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm navbar-right' %>
          <% else %>
          <form accept-charset="UTF-8" action="/users/sign_in" class="new_user navbar-form navbar-right" id="new_user" method> 
            <div class="form-group">

              <input autofocus="autofocus" placeholder="Email" id="user_email" name="user[email]" type="email" value>

            </div>
            <div class="form-group">
              <input autocomplete="off" placeholder="Password" id="user_password" name="user[password]" type="password">
            </div>

            <input name="commit" type="submit" value="Log in">

          </form>
          <% end %>
    </div>
  </div>
  </div>



    <div class="container">
    <%= yield %>

     <% if user_signed_in? %>
        <%= link_to 'Log Out', destroy_user_session_path,
                    method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
     <% else %>
         <%= link_to 'Log In', new_user_session_path, class: 'btn btn-info btn-sm' %> |
         <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-info btn-sm' %>
     <% end %>
    </div>
    
</body>
</html>
