<center> 
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password", style: "width:400px" %></div>

  <div><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm new password", style: "width:400px" %></div>

  <div><%= f.submit "Change my password", class: "btn btn-primary btn-sm" %></div>
<% end %>

<%= render "devise/shared/links" %>
</center> 
