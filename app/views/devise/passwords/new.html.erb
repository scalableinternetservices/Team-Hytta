<center>
<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><br />
  <%= f.email_field :email, autofocus: true, placeholder: "Email", style: "width:400px" %></div>
  <br /> 
  <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-sm" %> or
  	<%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-sm" %>
</div>
<% end %>

</center>
