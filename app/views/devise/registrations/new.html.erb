<center>
  <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <br />
    <%= f.text_field :first_name, autofocus: true, placeholder: "First name", style: "width:400px" %>
  </div>

  <div class="field">
    <br />
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last name", style: "width:400px" %>
  </div>

  <div class="field">
    <br />
    <%= f.email_field :email, placeholder: "Email", style: "width:400px" %>
  </div>

  <div class="field">
    <% if @validatable %>
    <em></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)", style: "width:400px" %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", style: "width:400px" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary btn-sm"%>
  </div>
<% end %>

</center>