<center> 
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><br />
  <%= f.email_field :email, autofocus: true, placeholder: "Email", style: "width:400px" %></div>

  <div><% if @validatable %><% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)", style: "width:400px" %></div>

  <div><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", style: "width:400px" %><br><br></div>

  <div><%= f.submit "Sign up", class: "btn btn-primary btn-sm"%></div>
<% end %>
</center>


