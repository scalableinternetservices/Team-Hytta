<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><br />
  <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>

  <div><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>

  <div><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %><br><br></div>

  <div><%= f.submit "Sign up", class: "btn btn-primary btn-sm"%></div>
<% end %>


